<div class="title-header need-smaller-subscription" id="header-smaller">
</div>



<div class="platforms-container" id="container-smaller-subscription">
  <div class="platform-cards additonal-box-shadow smaller-border-radius" id="card-smaller">
  <%= cl_image_tag @platform_account.platform.logo.key, width: 150, crop: :fill if @platform_account.platform.logo.attached? %>
  </div>
</div>


<div class="d-flex justify-content-center align-items-center flex-column h-100" style="min-height: 20vh;">
  <div class="w-100 negative-margin">
    <h2 class="text-center">How many shareflix users should have access to your account?</h2>
      <%= simple_form_for(@platform_account, method: :put, url: wizard_path) do |f|%>
        <div class="login-container">
          <div class="form-inputs login-form">
            <%= f.input :seats_available, as: :select, collection: 1..SubscriptionType.find_by(id: @platform_account.account_type).seats_total, label: "Select the maximum number of users that should have access to your account at the same time" %>
          </div>
          <div class="form-actions btn-login">
            <%= f.submit value: "Finalize Account"  %>
          </div>
        </div>
      <% end %>
  </div>
</div>

<div class="back-button-box">
  <%= link_to 'Previous', previous_wizard_path, class: "back-button" %>
</div>

