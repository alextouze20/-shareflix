

<div class="title-header need-smaller-subscription" id="header-smaller">
</div>

<div class="platforms-container" id="container-smaller-subscription">
  <div class="platform-cards additonal-box-shadow smaller-border-radius" id="card-smaller">
  <%= cl_image_tag @platform_account.platform.logo.key, width: 150, crop: :fill if @platform_account.platform.logo.attached? %>
  </div>
</div>

<h1 id="header1-smaller-subscription" class="header-red-for-sub"> What kind of account is it ?</h1>

<%  @platform_account.platform.subscription_types.each do |subscription_type| %>
  <%= simple_form_for(@platform_account, html: { class: "form-subscription", data: {type_id: subscription_type.id} }, method: :put, url: wizard_path) do |f|%>
    <%= f.input_field :account_type, value: subscription_type.id, class: 'd-none' %>
    <%= f.submit value: subscription_type.name, class: "d-none form-subscription-submit-#{subscription_type.id}" %>

  <% end %>
<% end %>

<div class="container-standard-subscription">
  <%  @platform_account.platform.subscription_types.each do |subscription_type| %>

    <div class="card-product" id='<%= subscription_type.id %>' data-type-id=<%= subscription_type.id %>>
      <div class="card-product-infos">

        <h1><%= subscription_type.name %></h1>
        <p><%= subscription_type.description %></p>
        <h2><%= subscription_type.price %> â‚¬ / <%= subscription_type.payment_frequency %></h2>

      </div>
  </div>

  <% end %>

